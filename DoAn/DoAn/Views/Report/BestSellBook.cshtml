@using DoAn.Models;
@{
    ViewBag.Title = "BestSellBook";
}
<script src="~/scripts/jquery-3.4.1.min.js"></script>
<script src="~/scripts/Customer.js"></script>
<link href="~/Content/Main.css" rel="stylesheet" />
<link href="~/Content/font-awesome.min.css" rel="stylesheet" />
<script src="~/scripts/ReportChart.js"></script>

<div class="contain center-text">
    <h1>Best Selling Book</h1>
    <br /><br />

    <!-- TABLE TOP SELLING BOOKS -->
    <table class="table table-border">
        <tr>
            <th style="background-color:#333; color: white;">Book Name</th>
            <th style="background-color:#333; color: white;">Sell</th>
        </tr>
        @if(ViewBag.Report != null)
        {
            List<Tuple<Book, int>> item = ViewBag.Report;
            for(int i = 0; i < item.Count; i++)
            {
                <tr>
                    <!-- NAME -->
                    <th>@item[i].Item1.ten_sach</th>

                    <!-- COUNT -->
                    <th>@item[i].Item2</th>
                </tr>
            }
        }
    </table>

</div><br /><br /><br />
<hr />
<br /><br /><br />
<div class="contain center-text">
    <h1>TOP CUSTOMER</h1><br /><br />

    <!-- TABLE TOP CUSTOMER -->
    <table class="table table-border">
        <tr>
            <th style="background-color:#333; color: white;">Email</th>
            <th style="background-color:#333; color: white;">Full Name</th>
            <th style="background-color:#333; color: white;">Phone</th>
            <th style="background-color:#333; color: white;">Address</th>
        </tr>
        @if(ViewBag.Customer != null)
        {
            foreach(var item in ViewBag.Customer)
            {
                <tr>
                    <!-- EMAIL -->
                    <th>@item.email</th>

                    <!-- FULL NAME -->
                    <th>@item.last_name @item.first_name</th>

                    <!-- PHONE -->
                    <th>@item.phone</th>

                    <!-- ADDRESS -->
                    <th>@item.address</th>
                </tr>
            }
        }
    </table>
</div>

<script>
    $(document).ready(function () {
        get_data_profit();
    })

</script>